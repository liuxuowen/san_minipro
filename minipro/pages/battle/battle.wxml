<view class="container">
  <view class="header">
    <text class="title">战功识别</text>
    <text class="subtitle">请分别上传连串战报和单场战报</text>
  </view>

  <view class="upload-section">
    <!-- Image 1: Consecutive Battle Report -->
    <view class="upload-item" bindtap="chooseImage" data-type="consecutive">
      <view class="label">连串战报</view>
      <view class="image-box">
        <image wx:if="{{consecutiveImage}}" src="{{consecutiveImage}}" mode="aspectFit" class="preview"></image>
        <view wx:else class="placeholder">+</view>
      </view>
    </view>

    <!-- Image 2: Single Battle Report -->
    <view class="upload-item" bindtap="chooseImage" data-type="single">
      <view class="label">单场战报</view>
      <view class="image-box">
        <image wx:if="{{singleImage}}" src="{{singleImage}}" mode="aspectFit" class="preview"></image>
        <view wx:else class="placeholder">+</view>
      </view>
    </view>
  </view>

  <button class="submit-btn" type="primary" bindtap="startRecognition">开始识别</button>
  
  <view class="debug-info" wx:if="{{debugLog}}">
    <text>调试信息 (请查看 Console):</text>
    <text>{{debugLog}}</text>
  </view>
</view>
