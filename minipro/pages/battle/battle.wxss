.container {
  padding: 20rpx;
  padding-bottom: 120rpx; /* Space for footer */
  background-color: #f7f7f7;
  min-height: 100vh;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.upload-section {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.upload-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.image-box {
  width: 300rpx;
  height: 400rpx;
  background: #fff;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.preview {
  width: 100%;
  height: 100%;
}

.placeholder {
  font-size: 80rpx;
  color: #ddd;
}

.submit-btn {
  margin-top: 60rpx;
  width: 80%;
}

.debug-info {
  margin-top: 40rpx;
  padding: 20rpx;
  background: #fff;
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.plus {
  font-size: 60rpx;
  font-weight: 300;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
}

.footer-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
  z-index: 100;
}

.total-info {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.total-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #e64340;
  margin-left: 10rpx;
}

.action-btn {
  background: #4ed12d;
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: 0;
}

.action-btn[disabled] {
  background: #ccc;
  color: #fff;
}
