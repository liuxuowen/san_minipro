.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.avatar-wrapper {
  padding: 0;
  width: 128rpx !important;
  height: 128rpx !important;
  border-radius: 50%;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.nickname-input {
    border-bottom: 1px solid #ccc;
    padding: 5px;
    text-align: center;
    margin-top: 10px;
    width: 200rpx;
}

.usermotto {
  margin-top: 100px;
}

.footer {
    position: fixed;
    bottom: 30rpx;
    width: 100%;
    text-align: center;
}

.openid-text {
    font-size: 12px;
    color: #999;
}
