.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.avatar-wrapper {
  padding: 0;
  width: 128rpx !important;
  height: 128rpx !important;
  border-radius: 50%;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.nickname-input {
    border-bottom: 1px solid #ccc;
    padding: 5px;
    text-align: center;
    margin-top: 10px;
    width: 200rpx;
}

.info-section {
  width: 90%;
  margin-top: 60rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #333;
}

.picker-value, .input-value {
  color: #666;
  text-align: right;
}

.input-value {
  width: 300rpx;
}

.arrow {
  color: #ccc;
  margin-left: 10rpx;
}

.footer {
    position: fixed;
    bottom: 30rpx;
    width: 100%;
    text-align: center;
}

.openid-text {
    font-size: 12px;
    color: #999;
}
