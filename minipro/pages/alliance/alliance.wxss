page {
  background: #fafafa;
  padding-bottom: 40rpx;
}

.container {
  padding: 16rpx;
  box-sizing: border-box;
}

/* Entry Screen Styles */
.entry-screen {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.entry-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 80rpx;
}

.entry-options {
  display: flex;
  gap: 60rpx;
}

.entry-card {
  width: 280rpx;
  height: 280rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.entry-card.disabled {
  opacity: 0.6;
}

.entry-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.entry-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.coming-soon {
  position: absolute;
  bottom: 20rpx;
  font-size: 20rpx;
  color: #999;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  margin-bottom: 24rpx;
  box-sizing: border-box;
  width: 100%;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.upload-btn {
  background: #4ed12d;
  color: #fff;
  font-size: 28rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
  padding: 16rpx 0;
  line-height: 1.5;
}

.note {
  font-size: 22rpx;
  color: #999;
  margin-top: 16rpx;
}

.section-header {
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copy-id-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 9rpx;
  background: linear-gradient(180deg, #000000 0%, #444444 100%);
  box-shadow: 0px 10rpx 20rpx 0px rgba(185, 185, 185, 0.1);
}

.copy-text {
  font-size: 24rpx;
  color: #fff;
  margin-right: 8rpx;
}

.copy-icon {
  width: 28rpx;
  height: 28rpx;
}

.alliance-name-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.alliance-name-wrapper {
  display: flex;
  align-items: center;
}

.alliance-name {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.edit-icon {
  font-size: 28rpx;
  color: #666;
  opacity: 0.6;
  margin-left: 4rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.analysis-actions {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.analysis-btn {
  flex: 1;
  font-size: 24rpx;
  padding: 8rpx 0;
  background: #4ed12d;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
  line-height: 2;
}

.analysis-btn.is-disabled {
  background: #f1f1f1;
  color: #8c8c8c;
}

.uploads-list {
  margin-top: 8rpx;
}

.upload-item {
  display: flex;
  align-items: center;
  padding: 16rpx 8rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}

.upload-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.upload-detail-link {
  color: #576b95;
  padding: 8rpx;
  margin-right: 8rpx;
  font-size: 24rpx;
}

.upload-item.is-selected {
  background: rgba(87,190,106,0.1);
  border-radius: 8rpx;
}

.upload-item.is-selected .upload-text {
  color: #075c34;
  font-weight: bold;
}

.upload-info {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 0; /* 防止长文本撑开容器 */
}

.delete-btn {
  font-size: 22rpx;
  color: #c0392b;
  border: 1rpx solid #e5e5e5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}
