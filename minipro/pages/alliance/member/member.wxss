.container {
  padding: 0;
  background-color: #fff;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  box-sizing: border-box;
  align-items: flex-start;
}

.nav-bar {
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-start;
  width: 100%;
  flex-shrink: 0;
}

.breadcrumb {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #576b95;
}

.nav-item {
  display: flex;
  align-items: center;
}

.separator {
  margin: 0 10rpx;
  color: #999;
}

.back-icon {
  margin-right: 4rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.back-text {
  font-weight: 500;
}

.header {
  padding: 10rpx 0 20rpx 0;
  background-color: #fff;
  width: 100%;
  text-align: left;
  flex-shrink: 0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.legend {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 10rpx;
  flex-shrink: 0;
}

.legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
  font-size: 24rpx;
  color: #666;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.battle-color {
  background-color: #e74c3c;
}

.power-color {
  background-color: #3498db;
}

.chart-container {
  width: 100%;
  height: 400rpx;
  flex-shrink: 0;
  margin-bottom: 20rpx;
}

.chart {
  width: 100%;
  height: 100%;
}

.table-container {
  width: 100%;
  flex: 1;
  height: 0;
}

.table {
  width: 100%;
}

.tr {
  display: flex;
  width: 100%;
}

.th, .td {
  padding: 20rpx 10rpx;
  text-align: center;
  font-size: 22rpx;
  border-bottom: 1rpx solid #eee;
  flex: 1;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-row {
  background-color: #f0f0f0;
  font-weight: bold;
  color: #333;
  position: sticky;
  top: 0;
  z-index: 10;
}

.even {
  background-color: #fff;
}

.odd {
  background-color: #fafafa;
}