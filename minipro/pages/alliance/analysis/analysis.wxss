.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start; /* Override app.wxss space-between */
}

.nav-bar {
  padding: 0 0 10rpx 0;
  display: flex;
  justify-content: flex-start;
  width: 100%;
}

.breadcrumb {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #576b95;
  padding: 0;
}

.back-icon {
  margin-right: 4rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.back-text {
  font-weight: 500;
}

.info-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.card-header-row {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 10rpx;
}

.header-section {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.group-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
}

.group-tab {
  display: inline-block;
  padding: 12rpx 34rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.group-tab.active {
  background: #333;
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.image-container {
  background: transparent;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main-image {
  width: 600rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.no-data {
  text-align: center;
  padding: 50rpx;
  color: #999;
}

/* Loading Animation */
.loading-container {
  position: fixed;
  top: 40%; /* Slightly above center visually */
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.9);
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #576b95; /* WeChat Blue */
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}